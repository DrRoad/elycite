<!-- Modal -->
<div class="modal fade" id="modal-build" data-backdrop="false" tabindex="-1" role="dialog" aria-labelledby="modal-query-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close cancel-question" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="modal-query-label">Build classifier for {{concept.name}}</h4>
      </div>
      <div class="modal-body" id="modal-build-main">
        <p>Keywords: {{concept.keywords}}</p>
        <p>Positive examples: {{concept.ndocs}}</p>
        <div class="input-group">
          <span class="input-group-addon">Name</span>
          <input id="cls-name" type="text" class="form-control" placeholder="{{concept.ontology}}_">
        </div>
        <div class="input-group" style="margin-top:5px;">
          <select class="selectpicker" data-width="100px" data-style="btn-info" title="Field" id="fieldPicker">
            {{#each textFields}}
            <option>{{this}}</option>
            {{/each}}
          </select>
        </div>
        <!-- advance options accordion -->
        <div class="panel-group" id="accordion" style="margin-top:5px;">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse{{this.storeId}}">
                  Advanced options
                </a>
              </h4>
            </div> <!-- /panel heading -->
            <div id="collapse{{this.storeId}}" class="panel-collapse collapse">
              <div class="panel-body">
                <div class="row">
                  <div class="input-group">
                    <div class="form-group">
                      <label for="cls-stemmerPicker">Stemmer: </label>
                      <select class="selectpicker" id="cls-stemmerPicker">
                        {{#each langopts.stemmer}}
                        <option>{{this}}</option>
                        {{/each}}
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="cls-stopwordsPicker">Stopword list: </label>
                      <select class="selectpicker" id="cls-stopwordsPicker">
                        {{#each langopts.stopwords}}
                        <option>{{this}}</option>
                        {{/each}}
                      </select>
                    </div>
                    <form class="form-inline" role="form">
                      <div class="form-group">
                        <div class="input-group">
                          <span class="input-group-addon">C</span>
                          <input type="number" class="form-control" id="cls-param-c" value="1.0">
                        </div>
                        <div class="input-group">
                          <span class="input-group-addon">J</span>
                          <input type="number" class="form-control" id="cls-param-j" value="0.0" title="default 0 means auto-balance.">
                        </div>
                      </div>
                    </form>
                  </div>  <!-- input group -->
                </div> <!-- /row -->
              </div> <!--/panel body -->
            </div> <!-- /collapse --> 
          </div> <!-- /panel (accordion) item -->
        </div> <!-- /accordion -->
      </div> <!-- /model body -->
      <div id="modal-build-footer" class="modal-footer">
        <button id="do-build-cls" data-cid={{concept.$id}} type="button" class="btn btn-primary" data-loading-text="Building...">Build</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
