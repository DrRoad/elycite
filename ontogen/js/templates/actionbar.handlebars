<div class="row" id="actiobar">
  <form class="form-inline" role="form">
     <div class="form-group col-md-3">
      <label class="sr-only" for="inputName">Name</label>
      <input type="text" class="form-control" id="inputName" value="{{name}}">
    </div>
    <div class="form-group col-md-4">
      <label class="sr-only" for="inputKeywords">Keywords</label>
      <input type="text" class="form-control" id="inputKeywords" value="{{keywords}}">
    </div>
    <div class="form-group col-md-1">
      <button type="button" class="btn btn-default">Submit</button>
    </div>
    <div class="form-group col-md-4">
      <button type="button" class="btn btn-success">New</button>
      <button type="button" class="btn btn-primary">Suggest</button>
      <button type="button" class="btn btn-warning">Move</button>
      <button type="button" class="btn btn-danger">Delete</button>
    </div>
  </form> 
</div>
