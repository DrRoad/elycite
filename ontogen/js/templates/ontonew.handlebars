<div class="page-header">
  <h1>Create Ontology</h1>
</div>
<div class="alert alert-danger fade in" id="nameAlert" style="display: none">
  <button id="modalClose" type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <p><strong>Invalid name for ontology!</strong> Change the name field and try again.</p>
</div>
  <form class="form-horizontal" role="form">
     <div class="form-group">
       <label  class="col-sm-4 control-label" for="inputOntoName">Ontology name</label>
       <div class="col-sm-4">
        <input type="text" class="form-control" id="inputOntoName" placeholder="onto_">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4  control-label" for="storePicker">Store</label>
      <div class="col-sm-8">
        <select class="selectpicker" id="storePicker">
          {{#each stores}}
          <option>{{this.storeName}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4  control-label" for="fieldPicker">Field</label>
      <div class="col-sm-8">
        <select class="selectpicker" id="fieldPicker">
          {{#each fields}}
          <option>{{this.fieldName}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label" for="stemmerPicker">Stemmer</label>
      <div class="col-sm-8">
        <select class="selectpicker" id="stemmerPicker">
        {{#each this.langopts.stemmer}}
        <option>{{this}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label" for="stopwordsPicker">Stopwords</label>
    <div class="col-sm-8">
      <select class="selectpicker" id="stopwordsPicker">
        {{#each this.langopts.stopwords}}
        <option>{{this}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label" for="maxngramlength">Max n-gram length</label>
    <input class="col-sm-4" type="number" id="maxNgramLength" value="3">
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label" for="minNgramFreq">Min n-gram frequency</label>
    <input class="col-sm-4" type="number" id="minNgramFreq" value=5>
  </div>
</form>
 <div class="col-sm-offset-4 col-sm-8">
  <button class="btn btn-primary pull-right" id="ontoCreate">Create</button>
</div>
